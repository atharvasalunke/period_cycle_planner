FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy Python files
COPY main.py .
COPY schemas.py .
COPY gemini_client.py .
COPY elevenlabs_client.py .
COPY prompts.py .
COPY __init__.py .

EXPOSE 8000

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
